<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_play_ui"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ll_bottom_container"
        android:background="@drawable/easy_bottom_control_ui_bg"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:minHeight="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            style="@style/EasyPlayer.Play"
            android:id="@+id/iv_small_play"/>

        <TextView
            android:id="@+id/tv_current_time"
            android:gravity="center"
            android:text="00:00:00"
            android:textColor="@android:color/white"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <SeekBar
            android:layout_gravity="center_vertical"
            android:id="@+id/sb_progress"
            android:layout_weight="1"
            android:progressDrawable="@drawable/easy_video_progress"
            android:layout_width="0dp"
            android:maxHeight="5dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_total_time"
            android:gravity="center"
            android:text="00:00:00"
            android:textColor="@android:color/white"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/iv_full_screen"
            android:padding="15dp"
            android:src="@drawable/easy_icon_full_screen"
            android:scaleType="fitXY"
            android:layout_width="60dp"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>